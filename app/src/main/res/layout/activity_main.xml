<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_margin="15dp"
    >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First quarter"
        android:textColor="#ff0000"
        android:backgroundTint="@android:color/holo_red_light"
        android:layout_marginBottom="10dp"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="15dp">
   <TextView
       android:layout_width="65dp"
       android:layout_height="65dp"
       android:text="\nJAN"
       android:textSize="15sp"
       android:textAlignment="center"
       android:background="@color/one"
       android:backgroundTint="@android:color/holo_blue_dark"/>
    <ImageView
        android:layout_width="295dp"
        android:layout_height="65dp"
        android:src="@drawable/jan"
        android:scaleType="centerCrop"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="\nFEB"
            android:textSize="15sp"
            android:textAlignment="center"
            android:background="@color/one"
            android:backgroundTint="@android:color/holo_blue_dark"/>
        <ImageView
            android:layout_width="295dp"
            android:layout_height="65dp"
            android:src="@drawable/feb"
            android:scaleType="centerCrop"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="\nMAR"
            android:textSize="15sp"
            android:textAlignment="center"
            android:background="@color/one"
            android:backgroundTint="@android:color/holo_blue_dark"/>
        <ImageView
            android:layout_width="295dp"
            android:layout_height="65dp"
            android:src="@drawable/mar"
            android:scaleType="centerCrop"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Second quarter"
        android:textColor="#ff0000"
        android:backgroundTint="@android:color/holo_red_light"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="\nAPR"
            android:textSize="15sp"
            android:textAlignment="center"
            android:background="@color/one"
            android:backgroundTint="@android:color/holo_blue_dark"/>
        <ImageView
            android:layout_width="295dp"
            android:layout_height="65dp"
            android:src="@drawable/apr"
            android:scaleType="centerCrop"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="\nMAY"
            android:textSize="15sp"
            android:textAlignment="center"
            android:background="@color/one"
            android:backgroundTint="@android:color/holo_blue_dark"/>
        <ImageView
            android:layout_width="295dp"
            android:layout_height="65dp"
            android:src="@drawable/may"
            android:scaleType="centerCrop"/>
    </LinearLayout>


</LinearLayout>